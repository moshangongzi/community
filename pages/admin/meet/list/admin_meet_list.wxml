<van-search value="{{inputValue}}" placeholder="请输入要搜索的活动名" use-action-slot bind:change="onChange" bind:search="onSearch">
	<view slot="action" class="btn mid radius bg-admin text-white margin-right-s" bind:tap="onSearch">搜索</view>
</van-search>
<!-- List Begin -->

<view style="margin-bottom: 60px;">
	<view class="admin-comm-list">
		<view wx:if="{{activeList}}" class="load text-grey">共有{{activeList.length}}条符合条件记录 </view>
		<view class="item" wx:for="{{activeList}}" wx:key="_id">
			<view class="header">
				<view class="right" bindtap="bindScanTap" data-id="{{item._id}}" data-title="{{item.title}}">
					{{item.title}}
				</view>
			</view>

			<view class="info">
				<view class="info-item">
					<view class="title">状态</view>
					<view class="mao">：</view>
					<view class="content">
						<text wx:if="{{item.status==0}}" class="text-grey">未开始</text>
						<text wx:elif="{{item.status==1}}" class="text-black">进行中</text>
						<text wx:elif="{{item.status==-1}}" class="text-grey">已停止</text>
					</view>
				</view>

				<view class="info-item">
					<view class="title">时间</view>
					<view class="mao">：</view>
					<view class="content {{item.leaveDay==0?'text-grey':''}}">{{item.leaveDay}}天可用</view>
				</view>

				<view class="info-item">
					<view class="title">创建/变更</view>
					<view class="mao">：</view>
					<view class="content">{{item.editTime}}</view>
				</view>

				<view class="oprt">
					<view bindtap="url" data-url="../edit/admin_meet_edit?id={{item._id}}" class="btn margin-right-s">
						<text class="icon-settings margin-right-xxs text-blue"></text>设置
					</view>

					<view bindtap="bindRecordSelectTap" data-id="{{item._id}}" data-title="{{item.title}}" class="btn margin-right-s">名单与核销</view>

					<view bindtap="bindStatusSelectTap" data-id="{{item._id}}" class="btn   margin-right-s"><text class="icon-cascades margin-right-xxs text-orange"></text>状态</view>

					<view bindtap="bindMoreSelectTap" data-id="{{item._id}}" class="btn">更多操作</view>

				</view>
			</view>
		</view>
	</view>
</view>
<!-- List END -->

<button bindtap="url" class="creatAct" data-url="../edit/admin_meet_edit" type="primary">创建活动</button>