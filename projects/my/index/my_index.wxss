@import "../../skin/skin.wxss";
@import "../../../style/project/my_index_base.wxss";


/*投影*/
.main .upside {
	border-bottom: 10rpx solid var(--projectCompareColor);
	border-bottom-left-radius: 120rpx;  
}

.main .upside .user-bar .detail .desc {
	color: var(--projectCompareColor)
}
page {
    background-color: #f7f8fa;
}

.user {
    width: 100%;
    height: 200px;
}

.bg {
    position: relative;
    width: 100%;
    height: 260px;
    top: 0;
    left: 0;
    filter: blur(18rpx);
    -webkit-filter: blur(18rpx);
}

.con {
    width: 80%;
    position: absolute;
    left: 50%;
    top: 115px;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #f7f8fa;
}

.headimg {
    margin: 1px auto;
    width: 200rpx;
    height: 200rpx;
}

.headimg image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.uname {
    margin-top: 10px;
    font-size: 34rpx;
}

.login_btn {
    position: absolute;
    left: 50%;
    top: 60px;
    transform: translateX(-50%);
    font-weight: 700;
    font-size: 30px;
    padding: 30rpx;
    border-radius: 10rpx;
}